<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/accountTitleTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Account Details"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accountNameTXT"
        android:layout_width="189dp"
        android:layout_height="32dp"
        android:hint="Name"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/accountEmailTXT"
        android:layout_width="193dp"
        android:layout_height="33dp"
        android:hint="E-Mail"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="191dp" />

    <TextView
        android:id="@+id/accountCourseTXT"
        android:layout_width="196dp"
        android:layout_height="27dp"
        android:hint="Course"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="241dp" />
    <TextView
        android:id="@+id/accountStageTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Stage"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="291dp" />

    <TextView
        android:id="@+id/accountSchoolTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="School"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/SettingsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="582dp" />
</androidx.constraintlayout.widget.ConstraintLayout>